{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "useUnknownInCatchVariables": false,
    "jsx": "react", // ou "react-jsx" para projetos React modernos
    "module": "commonjs", // ou outro módulo que esteja usando
    "target": "es6", // ou outro alvo adequado
    "strict": true // (opcional) para reforçar boas práticas
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
